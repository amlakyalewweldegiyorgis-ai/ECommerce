<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShopController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <HBox style="-fx-background-color: #e0e0e0; -fx-padding: 10;" alignment="CENTER_LEFT" spacing="20">
                <Label text="Suke.com" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <Label fx:id="welcomeLabel" text="Welcome, User!"/>
                <Button text="Logout" onAction="#handleLogoutButton"/>
                <Button text="View Cart" onAction="#handleViewCartButton"/>
            </HBox>
        </top>
        <center>
            <ListView fx:id="productListView">
                <placeholder>
                    <Label text="No products available."/>
                </placeholder>
            </ListView>
        </center>
    </BorderPane>
</AnchorPane>