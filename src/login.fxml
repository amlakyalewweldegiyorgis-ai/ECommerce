<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label text="Suke.com" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Label text="What are you looking for? ..."/>

        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20; -fx-background-color: #f0f0f0; -fx-background-radius: 5;">
            <Label text="Login" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Register" onAction="#handleRegisterButton"/>
                <Button text="Login" onAction="#handleLoginButton" defaultButton="true"/>
            </HBox>
            <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
        </VBox>
    </VBox>
</AnchorPane>